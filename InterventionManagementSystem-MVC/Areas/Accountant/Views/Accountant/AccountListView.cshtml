@model InterventionManagementSystem_MVC.Areas.Accountant.Models.AccountListViewModel


<h3>Account List</h3>
<hr />
<h4>Site Engineer</h4>
<table id="table-clients" class="table table-striped table-bordered table-hover table-responsive" style="background-color: white">
    <thead>
        <tr>
            <th style="width: 70%">Name</th>
        
            <th style="width: 30%">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.SiteEngineers)
        {
            <tr style="vertical-align: middle;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                
                <td>

                    @Html.ActionLink("Edit", "EditDistrict","Accountant", new { Id = item.Id }, null)
                </td>
                </tr>
        }
        </tbody>
</table>

<h4>Manager</h4>
<table id="table-clients" class="table table-striped table-bordered table-hover table-responsive" style="background-color: white">
    <thead>
        <tr>
            <th style="width: 70%">Name</th>
            <th style="width: 30%">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Managers)
        {
            <tr style="vertical-align: middle;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>

                    @Html.ActionLink("Edit", "EditDistrict", "Accountant", new { Id = item.Id }, null)
                </td>
            </tr>
        }
              
        </tbody>
    </table>