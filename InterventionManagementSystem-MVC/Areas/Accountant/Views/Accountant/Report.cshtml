@model InterventionManagementSystem_MVC.Areas.Accountant.Models.ReportViewModel

<table id="table-clients" class="table table-striped table-bordered table-hover table-responsive" style="background-color: white">
    <thead>
        <tr>
            <th style="width: 40%">Name</th>
            <th style="width:30%">Costs($)</th>
            <th style="width: 30%">Hours(h)</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Report)
        {
            <tr style="vertical-align: middle;">
                <td>
                    @Html.DisplayFor(modelItem => item.FirstProperty)
                </td>
                <td>

                    @Html.DisplayFor(modelItem =>item.Costs)
                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.Hours)
                </td>
            </tr>
        }
    </tbody>
</table>

