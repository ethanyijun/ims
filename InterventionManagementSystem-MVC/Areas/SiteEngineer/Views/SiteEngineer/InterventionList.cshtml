@model InterventionManagementSystem_MVC.Areas.SiteEngineer.Models.SiteEngineerViewInterventionModel


<h3>Intervention List</h3>
<hr />

@using (Html.BeginForm())
{
    <table id="table-clients" class="table table-striped table-bordered table-hover table-responsive" style="background-color: white">
        <thead>

            <tr>

                <th class="col-md-2 col-lg-2">Intervention Type Name</th>

                @*<th class="col-md-2 col-lg-2">Client Name</th>

                <th class="col-md-1 col-lg-1">Created Date</th>*@

                <th class="col-md-2 col-lg-2">Intervention State</th>
                @*<th class="col-md-2 col-lg-2">Comments</th>*@
                @*<th class="col-md-2 col-lg-2">Edit</th>*@
                <th class="col-md-2 col-lg-2">Edit State</th>
            </tr>

        </thead>
        <tbody>


            @foreach (var item in Model.Interventions)
            {

                <tr style="vertical-align: middle;">

                    <td>
                        @Html.DisplayFor(modelItem => item.InterventionTypeName)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.ClientName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreate);
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.InterventionState)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>*@
               
                   
                    <td>
                        @Html.ActionLink("Edit", "EditInterventionState", new { id = item.Id })
                    </td>
                </tr>
            }


        </tbody>

    </table> }