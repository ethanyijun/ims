@model InterventionManagementSystem_MVC.Areas.SiteEngineer.Models.SiteEngineerViewClientModel

@{
    ViewBag.Title = "Client Details";
}

<h2>Client Details</h2>

<p>
    <div>
    <h4>@Html.DisplayNameFor(model => model.Client.Name)</h4>
    <label>@Html.DisplayFor(model => model.Client.Name)</label>
    </div>
    <div>
        <h4>@Html.DisplayNameFor(model => model.Client.DistrictName)</h4>
        <label>@Html.DisplayFor(model => model.Client.DistrictName)</label>
        </div>
    <div>
        <h4>@Html.DisplayNameFor(model => model.Client.Location)</h4>
        <label>@Html.DisplayFor(model => model.Client.Location)</label>
        </div>
        <br />
       
</p>
<table class="table table-striped table-bordered table-hover table-responsive" style="background-color: white">
    <tr>
        <th class="col-md-2 col-lg-2">
            @Html.DisplayNameFor(model => model.Intervention.InterventionTypeName)
        </th>
     
        <th class="col-md-2 col-lg-2">
            @Html.DisplayNameFor(model => model.Intervention.InterventionState)
        </th>
      
        <th class="col-md-2 col-lg-2">
            @Html.DisplayNameFor(model => model.Intervention.Comments)
        </th>

        <th class="col-md-2 col-lg-2">
            @Html.DisplayNameFor(model => model.Intervention.LifeRemaining)
        </th>
        <th class="col-md-2 col-lg-2">Edit Quality</th>
        <th class="col-md-2 col-lg-2">Edit State</th>
    </tr>

    @foreach (var item in Model.Interventions)
    {
        <tr style="vertical-align: middle;">
            <td>
                @Html.DisplayFor(modelItem => item.InterventionTypeName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.InterventionState)
            </td>
        
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LifeRemaining)
            </td>
            <td>
               
                @Html.ActionLink("Edit Quality", "EditIntervention", new { id = item.Id })
            </td>
            <td>    
                @Html.ActionLink("Edit State","EditInterventionState", new { id =item.Id})
            </td>
        </tr>
    }

</table>

